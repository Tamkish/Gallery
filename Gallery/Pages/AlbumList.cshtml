@page
@model AlbumListModel
@{
    ViewData["Title"] = "Home page";
}

<h1>My Albums</h1>

@if (Model.Albums.Count > 0)
{
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model.Albums)
            {
                <tr>
                    <td>
                        <form action="/ShowAlbum" method="get">
                            <input type="hidden" name="aId" value="@f.Name" />
                            <input type="hidden" name="uId" value="@f.OwnerId" />
                            <input type="submit" value="@f" class="link-secondary" />
                        </form>

                    </td>
                    <td>
                        @*<a class="btn btn-sm btn-primary" asp-page-handler="download" asp-route-filename="@f">Download</a>*@
                    </td>
                </tr>
            }
            <tr>
                <td>
                    <a class="btn btn-primary" href="/AddAlbum">Add Album</a>
                </td>
                <td>
                    @*<a class="btn btn-sm btn-primary" asp-page-handler="download" asp-route-filename="@f">Download</a>*@
                </td>
            </tr>
        </tbody>
    </table>
}

